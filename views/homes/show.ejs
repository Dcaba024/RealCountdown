<%- include("../partials/header") %>

<div class="container">
    <div class="container">
        <div class="row">
            <h1 style="font-size:24px;font-weight:bold;"><%= home.address %></h1>
        </div>
        <div class="dropdown-divider"></div>
        
    </div>

<div class="row">
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
              <img src="<%= home.Image%>" class="d-block w-100" alt="...">
          </div>
          <!-- <div class="carousel-item">
            <img src="..." class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="..." class="d-block w-100" alt="...">
          </div> -->
        </div>
      </div>
     

      <div class="column">
        <%home.bids.forEach(function(bid){ %>
            <div id="icard">
            <li class="card">
                <div class="d-flex justify-content-end">
                    <img class="showpic" src="<%= bid.author.image%>" alt="">
                </div>
                <p><%= bid.author.name %></p>
              
                <a href="/homes/<%= home._id %>/bids/<%= bid._id %>"><%= bid.author.username%> </a>
                <p><%= bid.rate %>%</p>
                <p><%= bid.author.phoneNumber %></p>

            </li>
              


            </div>
                
            
          
        <% }) %>

      </div>
            
    
        



</div>






<p><%= home.description %></p>
<p> <em>Submitted by <a href="/users/<%= home.author.id %>"><%= home.author.username %></a></em></p>

<% if(currentUser && home.author.id.equals(currentUser._id)){ %>
<a class="btn btn-warning" href="/homes/<%=home._id%>/edit">EDIT</a>
<form id="delete-form" action="/homes/<%=home._id%>?_method=DELETE" method="POST">
    <button class="btn btn-danger">Delete</button>
</form>
<% } %>

<% if(currentUser && currentUser.isAgent){ %>
    <a class="btn btn-success" href="/homes/<%=home._id%>/bids/new">Bid</a>
<% } %>









   




</div>


<%- include("../partials/footer") %>