<%- include("../partials/header") %>

<div class="container">
    <div class="container">
        <div class="row">
            <h1 style="font-size:24px;font-weight:bold;"><%= home.address %></h1>
        </div>
        <div class="dropdown-divider"></div>
        
    </div>

<div class="row">
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
              <img src="<%= home.Image%>" class="d-block w-100" alt="...">
          </div>
          <!-- <div class="carousel-item">
            <img src="..." class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="..." class="d-block w-100" alt="...">
          </div> -->
        </div>
      </div>

      <table id="bid-table" class="table table-borderless table-hover">
        <thead class="thead-dark">
            <tr>
                <th style="border-top-left-radius: 25px;" scope="col">Agent username</th>
                <th style="border-top-right-radius: 25px;" scope="col">Bid Rate</th>
            </tr>
        
        </thead>
        <tbody>
             <%home.bids.forEach(function(bid){ %>
                
            <tr>
                        <td><a href="/users/<%= bid.author.id %>"><%= bid.author.username%> </a></td>
                        <td><%= bid.rate %>%</td>
            </tr>
        <% }) %>
        </tbody>
    
    </table>
        



</div>






<p><%= home.description %></p>
<p> <em>Submitted by <a href="/users/<%= home.author.id %>"><%= home.author.username %></a></em></p>

<% if(currentUser && home.author.id.equals(currentUser._id)){ %>
<a class="btn btn-warning" href="/homes/<%=home._id%>/edit">EDIT</a>
<form id="delete-form" action="/homes/<%=home._id%>?_method=DELETE" method="POST">
    <button class="btn btn-danger">Delete</button>
</form>
<% } %>

<% if(currentUser && currentUser.isAgent){ %>
    <a class="btn btn-success" href="/homes/<%=home._id%>/bids/new">Bid</a>
<% } %>









   




</div>


<%- include("../partials/footer") %>